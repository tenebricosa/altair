.portfolio
    display flex
    justify-content space-between
    align-items top
    opacity 0
    transition opacity 0.4s ease-out 0.3s
    position absolute
    width $content-width
    min-width $content-min-width
    max-width $content-max-width
    margin 0 auto
    left 0
    right 0
    padding 0 20px
    box-sizing border-box
    margin-top 30px

    .pagination__input:checked + &
        opacity 1
        z-index 1

    &__item
        width (284 / 924) * 100%
        position relative
        list-style-type none

    &__list
        padding-left 0

    &__list-item
        list-style-type none
        line-height 26px

    &__link
        color #fff
        text-decoration none
        text-transform uppercase
        font-weight 700
        font-size 14px
        font-family Montserrat, sans-serif
        white-space nowrap
        display block
