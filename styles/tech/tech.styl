$tech-width = 82px
$tech-height = 100px
$tech-font-size = 12px

.tech
    padding-left 0
    user-select none
    font-size 0
    border-radius 10px
    display inline-block
    overflow hidden
    margin 10px 0 40px

    &__item
        list-style-type none
        display inline-block
        width $tech-width
        height $tech-height
        font-family Montserrat, sans-serif
        font-size $tech-font-size
        font-weight 700
        text-transform uppercase
        box-sizing border-box
        margin 0 0 0 1px
        background-color #635f6d
        position relative

        @media screen and (max-width: 1280px)
            &
                width 0.9 * $tech-width
                height 0.9 * $tech-height
                font-size 0.9 * $tech-font-size

        &:first-child
            margin 0 1px 0 0

        &:nth-child(2)
            margin 0

    &__icon
        font-size 40px
        margin-bottom 4px

    &__item-container
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        text-align center

