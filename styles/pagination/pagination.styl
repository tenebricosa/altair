.pagination
    font-family Montserrat, sans-serif
    font-size 0
    font-weight 700
    text-align center
    position absolute
    bottom 92px
    left 0
    right 0
    margin 0 auto
    opacity 0
    transition opacity 0.4s ease-out

    .pagination__input:checked + .portfolio + &
        opacity 1

    &__previous
    &__next
    &__current
        display inline-block
        font-size 12px
        vertical-align middle

    &__previous
    &__next
        background-color #fff
        color $font-dark
        width 162px
        text-align center
        text-transform uppercase
        padding 9px 0
        position relative
        cursor pointer
        user-select none
        z-index 1

        &:before
        &:after
            content ''
            position absolute
            width 0
            height 0

    &__previous

        &:before
            border-bottom 6px solid #fff
            border-right 162px solid transparent
            left 0
            top -6px

        &:after
            border-top 6px solid #fff
            border-right 162px solid transparent
            left 0
            bottom -6px

    &__next

        &:before
            border-bottom 6px solid #fff
            border-left 162px solid transparent
            left 0
            top -6px

        &:after
            border-top 6px solid #fff
            border-left 162px solid transparent
            left 0
            bottom -6px

    &__current
        border 3px solid #fff
        color #fff
        height 51px
        width 76px
        box-sizing border-box
        border-radius 9px
        position relative

        &:before
            content ''
            width 62px
            height 62px
            border 3px solid #fff
            position absolute
            border-radius 50%
            box-sizing border-box
            top -8px
            left 0
            right 0
            margin 0 auto
            background-color $purple-dark

    &__current-content
        margin auto
        top 0
        bottom 0
        left 0
        right 0
        background-color $purple-dark
        position absolute
        border-radius 7px
        display flex
        align-items center
        justify-content center
        font-size 18px

    &__sup
        top -0.2em
        font-size 12px

    &__input
        display none
